<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">

  <title>Games</title>
</head>

<body>
  <div class="container">
    <h1>Games available</h1>

    <!-- Add game button -->
    <div>
      <a href="/games/new" class="btn btn-outline-success mb-3">Add game</a>

      <!-- Iterating over the games in the database -->
      <% games.forEach( game => { %>

      <div class="card">
        <div class="card-body">
          <h4 class="card-title"><%= game.name %></h4>
        </div>
        <div class="card-body">
          <div class="card-title">Genre: <%= game.genre %></div>
        </div>
        <div class="card-body">
          <div class="card-title">Shop: <%= game.shop %></div>
        </div>
      </div>

      <% }) %>
    </div>
  </div>
</body>

</html>